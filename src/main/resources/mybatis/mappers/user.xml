<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">
	
	<!-- 쿼리문 작성 -->  
	<insert id="insert" parameterType="com.javaex.vo.UserVo">
		<![CDATA[
			insert into users
			values(seq_users_id.nextval, 
			       #{id}, 
			       #{password}, 
			       #{name}, 
			       #{gender}
			       )
		]]>
	</insert>
	
	<!-- 회원정보 가져오기(id password) => 로그인 -->
	<select id="selectUser" parameterType="com.javaex.vo.UserVo" resultType="com.javaex.vo.UserVo">
		<![CDATA[
			select  no,
			        name
			from users
			where id = #{id}
			and password = #{password}
		]]>
	</select>

	<!-- 회원정보수정을 위해 회원데이터 조회해오기(id, name, password, gender) -->
	<select id="selectOne" parameterType="int" resultType="com.javaex.vo.UserVo">
		<![CDATA[
			select  id,
			        password,
			        name,
			        gender
			from users
			where no = #{no}
		]]>
	</select>
	
	<!-- 회원정보 수정(update) -->
	<update id="update" parameterType="com.javaex.vo.UserVo">
		<![CDATA[
			update users
			set password = #{password},
			    name = #{name},
			    gender = #{gender}
			where no = #{no}
		]]>
	</update>
	
</mapper>